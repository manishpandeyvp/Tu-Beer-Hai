<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_beer_image"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/img"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_beer_image"
        app:layout_constraintStart_toEndOf="@id/iv_beer_image"
        tools:text="Trashy Blonde"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_tag_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toEndOf="@id/iv_beer_image"
        tools:text="You know you shouldn't You know you shouldn't"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:textColor="#232323"/>

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_share"
        android:background="@drawable/bg_circular_lined_black"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_tag_line"
        app:layout_constraintStart_toEndOf="@id/iv_beer_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>